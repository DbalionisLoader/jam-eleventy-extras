    <div class="card mb-3">
      <img src="../assets/images/abstract-blurred-multi-colored-background.jpg" class="card-img-top" alt="...">
        <div class="card-body d-flex flex-column">
      <h5 class="card-title">{{ post.data.title }}</h5>
      <p class="card-text">{{ post.data.description }}</p>
      {# Add flex and direction to parent, and mt-auto to element to make it stick to bottom of card #}
      <p class="card-text mt-auto"><small class="text-body-secondary">Updated {{ post.date | postDate}}</small></p>
        </div> 
    </div> 
  </div>
  {% endif %}
