---
title: A eleventy taster page
layout: base.njk
eleventyImport:
  collections: ["post"]
numberOfLatestPostsToShow: 2  
pagination: 
  data: collections.posts
  size: 4
  reverse: true
---
{# Hero section #}
{# Get latest post count 
{% set postsCount = collections.posts | length %}
{% set latestPostsCount = postsCount | min(numberOfLatestPostsToShow) %}

<h1> Latest {{ latestPostsCount }} Post{% if latestPostsCount != 1 %}s{% endif %}</h1> 

{% set postslist = collections.posts | head(-1 * numberOfLatestPostsToShow) %}
{% set postslistCounter = postsCount %} #}

{# Latest post hero section #}
{# mostrecent contain the data on the latest post aka last post to be posted, start would be the oldest post #}
{% set mostRecent = collections.posts | last %}

<div class="p-4 p-md-5 mb-4 mt-4 text-white bg-dark rounded">
  <div class="col-md-6 px-0">
    <h1 class="display-4 fst-italic">{{mostRecent.data.title}}</h1>
    <p class="lead my-3">{{ mostRecent.data.description }}</p>
    <p class="lead mb-0"> 
      <a href="{{ mostRecent.url }}" class="text-white fw-bold">Continue reading...</a>
    </p>
  </div>
</div> {# Latest post hero section end here #}

{# Featured post list cards #}

<div class="row mb-2">
  {% for post in pagination.items %}
  {% if loop.first %}
  {# Skip latest post #}
  {% else %}
